<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Hypar.SDK</AssemblyName>
    <Title>Hypar</Title>
    <Authors>Hypar</Authors>
    <PackageId>Hypar</PackageId>
    <Description>Function Execution for AEC</Description>
    <Summary>The Hypar SDK allows developers to create functions which runs on the Hypar platform.</Summary>
    <Copyright>Hypar LLC, 2018</Copyright>
    <PackageProjectUrl>https://www.hypar.io</PackageProjectUrl>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <Version>0.0.1-beta5</Version>
    <Tags>AEC</Tags>
  </PropertyGroup>

  <ItemGroup>
    <!-- <PackageReference Include="geometry3Sharp" Version="1.0.144" /> -->
    <PackageReference Include="glTF2Loader" Version="1.1.1-alpha" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="Unofficial.LibTessDotNet" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Verb">
      <HintPath>..\..\..\verb\build\cs\bin\Debug\netstandard2.0\VerbDotnet.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>

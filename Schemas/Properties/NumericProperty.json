{
    "$id": "https://raw.githubusercontent.com/hypar-io/Elements/representation/Schemas/Properties/NumericProperty.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "NumericProperty",
    "x-namespace": "Elements.Properties",
    "type": "object",
    "description": "A property with a numeric value.",
    "required": [
        "Value",
        "ValueType"
    ],
    "properties": {
        "Value": {
            "type": "number",
            "description": "The property's value"
        },
        "UnitType": {
            "type": "string",
            "description": "The property's unit type.",
            "enum": [
                "Length",
                "Mass",
                "Force",
                "Area",
                "Pressure",
                "Currency",
                "Time",
                "Number",
                "Volume"
            ]
        }
    },
    "additionalProperties": false
}